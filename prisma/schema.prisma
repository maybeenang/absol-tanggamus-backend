// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  nama      String
  nip       String   @unique
  email     String   @unique
  password  String
  absen     Absen[]
  role      Roles[]
  refreshToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Roles {
  id        Int      @id @default(autoincrement())
  role      String @unique
  user      User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Absen {
  id            String      @id @default(uuid())
  jamAbsen      DateTime?
  tanggal       DateTime
  jamMasuk      DateTime
  jamBatas      DateTime
  jamKeluar     DateTime
  user          User[]
  statusAbsen   statusAbsen @relation(fields: [statusAbsenId], references: [id])
  statusAbsenId Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model statusAbsen {
  id         Int      @id @default(autoincrement())
  keterangan String
  absen      Absen[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
